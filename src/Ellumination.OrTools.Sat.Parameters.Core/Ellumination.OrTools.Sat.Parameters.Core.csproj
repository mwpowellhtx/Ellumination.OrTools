<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Configurations>Debug;Release</Configurations>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Version>1.1.1.16218</Version>
        <AssemblyVersion>1.1.1.16218</AssemblyVersion>
        <FileVersion>1.1.1.16218</FileVersion>
        <PackageVersion>1.1.1.16218</PackageVersion>
        <!--<ReleaseVersionStrategy>patch</ReleaseVersionStrategy>-->
    </PropertyGroup>

    <PropertyGroup>
        <Description>Provides the basis for a first class experience specifying SAT-CP solver parameters.</Description>
        <PackageTags>Google;Operations;Research;Tools;SAT;CP;CSP;constraint;satisfaction;problem;solver;parameter;parameters;Variant;IVariant</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="Ellumination.OrTools.Sat.Parameters.Core.csproj.DotSettings" />
    </ItemGroup>

    <PropertyGroup Condition="'$(Platform)' == 'AnyCPU'">
        <PlatformTarget>x64</PlatformTarget>
        <DocumentationFile>bin\$(Configuration)\netstandard2.0\Ellumination.OrTools.Sat.Parameters.Core.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup>
        <RootNamespace>Ellumination.OrTools.Sat.Parameters</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <Compile Update="Implementation\Parameter.*.cs">
            <DependentUpon>Parameter.cs</DependentUpon>
        </Compile>
        <Compile Update="Interfaces\IParameter.*.cs">
            <DependentUpon>IParameter.cs</DependentUpon>
        </Compile>
    </ItemGroup>

    <!-- ReSharper disable UnknownProperty -->
    <ItemGroup>
        <!-- TODO: TBD: why did we reference Variants? true, the Parameters pattern sort of looks like Variants, but only to a point... -->
        <!--<PackageReference Include="Ellumination.Collections.Variants" Version="[1.1,2)" />-->
        <PackageReference Include="Validation" Version="$(ValidationVersion)" />
    </ItemGroup>
    <!-- ReSharper restore UnknownProperty -->

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>Ellumination.OrTools.Sat.Core</_Parameter1>
        </AssemblyAttribute>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>Test.Ellumination.OrTools.Sat.Parameters</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

</Project>
